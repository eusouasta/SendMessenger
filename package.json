{
    "name": "send-messenger-pro",
    "version": "1.0.3",
    "description": "WhatsApp Mass Messenger",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "prebuild": "cd client && npm run build",
        "build": "npm run prebuild && electron-builder",
        "build:dir": "npm run prebuild && electron-builder --dir",
        "dist": "npm run prebuild && npm run clean && electron-builder",
        "clean": "if exist release rd /s /q release",
        "install-all": "npm install"
    },
    "author": "Fer",
    "license": "ISC",
    "dependencies": {
        "@supabase/supabase-js": "^2.87.1",
        "cors": "^2.8.5",
        "electron-log": "^5.4.3",
        "electron-updater": "^6.6.2",
        "express": "^5.2.1",
        "puppeteer": "^18.2.1",
        "socket.io": "^4.8.1",
        "whatsapp-web.js": "^1.34.2"
    },
    "devDependencies": {
        "electron": "^33.2.1",
        "electron-builder": "^25.1.8"
    },
    "build": {
        "appId": "com.fer.sendmessenger",
        "productName": "SendMessenger Pro",
        "publish": {
            "provider": "github",
            "owner": "eusouasta",
            "repo": "SendMessenger"
        },
        "icon": "build/icon.png",
        "win": {
            "target": "nsis",
            "icon": "build/icon.png",
            "verifyUpdateCodeSignature": false
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true
        },
        "forceCodeSigning": false,
        "files": [
            "main.js",
            "server/**/*",
            "client/dist/**/*"
        ],
        "asar": true,
        "directories": {
            "output": "release"
        },
        "extraResources": [
            {
                "from": "server/history.json",
                "to": "server/history.json"
            }
        ],
        "asarUnpack": [
            "**/node_modules/puppeteer/**/*",
            "**/node_modules/puppeteer-core/**/*",
            "**/node_modules/whatsapp-web.js/**/*",
            "**/node_modules/puppeteer-core/.local-chromium/**/*"
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/eusouasta/SendMessenger.git"
    }
}